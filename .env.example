# AI API Keys
EXPO_PUBLIC_ANTHROPIC_API_KEY=your_anthropic_api_key_here
EXPO_PUBLIC_XAI_API_KEY=your_xai_api_key_here

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# Firebase Realtime Database URL (required for data persistence)
# Enable Realtime Database in Firebase Console and copy the URL
EXPO_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
